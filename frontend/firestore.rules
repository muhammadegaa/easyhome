rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Properties collection
    match /properties/{propertyId} {
      // Anyone can read available properties
      allow read: if resource.data.status == 'AVAILABLE';

      // Property owner can read their own properties (any status)
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Authenticated users can create properties
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'AVAILABLE'
        && request.resource.data.viewCount == 0;

      // Only owner can update their property
      allow update: if isOwner(resource.data.userId)
        && request.resource.data.userId == resource.data.userId;

      // Only owner can delete their property
      allow delete: if isOwner(resource.data.userId);
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);

      // Users can create/update their own profile
      allow create, update: if isOwner(userId);

      // Users cannot delete their profile (handled by authentication)
      allow delete: if false;
    }

    // Favorites collection
    match /favorites/{userId} {
      // Users can only access their own favorites
      allow read, write: if isOwner(userId);
    }
  }
}
